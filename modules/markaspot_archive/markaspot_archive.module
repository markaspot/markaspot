use Drupal\Core\Entity\EntityInterface;
use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function markaspot_archive_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the markaspot_archive module.
    case 'help.page.markaspot_archive':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Mark-a-Spot Archive') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_cron().
 */
function markaspot_archive_cron() {
  // Get the configuration and check if cronâ€based archiving is enabled.
  $config = \Drupal::config('markaspot_archive.settings');
  // Bail out only if cron_enable is explicitly disabled (0).
  if ($config->get('cron_enable') === 0) {
    return;
  }
  // Always run flag.
  $always = (bool) $config->get('cron_always_run');
  // Throttle interval (seconds).
  $interval = (int) $config->get('cron_interval');
  $state = \Drupal::state();
  $now = \Drupal::time()->getRequestTime();
  if (!$always && $interval > 0) {
    $last_run = $state->get('markaspot_archive.last_run', 0);
    if (($now - $last_run) < $interval) {
      // Not yet time to run again.
      return;
    }
    // Update last run time immediately to avoid race conditions.
    $state->set('markaspot_archive.last_run', $now);
  }
  // Determine what "archived" status is.
  $archived_status = $config->get('status_archived');

  // Get all nodes eligible for archiving from your service.
  $archivables = \Drupal::service('markaspot_archive.archive')->load();

  // Get the queue for the archive worker.
  $queue = \Drupal::queue('markaspot_archive_queue_worker');
  $count = 0;

  foreach ($archivables as $archivable) {
    // Check if the node is already archived.
    if ($archivable->get('field_status')->target_id != $archived_status) {
      // Only enqueue nodes that are not archived.
      $queue->createItem(['nid' => $archivable->id()]);
      $count++;
    }
  }

  \Drupal::logger('markaspot_archive')->notice('Enqueued @count nodes for archiving.', ['@count' => $count]);
}

/**
 * Anonymize configured fields on a service_request node.
 *
 * @param \Drupal\Core\Entity\EntityInterface $archivable
 *   The node entity to anonymize.
 * @param string[] $anonymize_fields
 *   Array of field machine names to anonymize.
 *
 * @return \Drupal\Core\Entity\EntityInterface
 *   The modified node.
 */
function markaspot_archive_anonymize(EntityInterface $archivable, array $anonymize_fields) {
  foreach ($anonymize_fields as $field_name) {
    if (!$archivable->hasField($field_name)) {
      continue;
    }
    $items = $archivable->get($field_name);
    if ($items->isEmpty()) {
      continue;
    }
    $definition = $items->getFieldDefinition();
    $type = $definition->getType();
    $random = substr(md5(uniqid(mt_rand(), TRUE)), 0, 10);
    switch ($type) {
      case 'email':
        $anon_value = $random . '@anonymized.off';
        break;

      case 'telephone':
        $anon_value = '+49-0123459995555';
        break;

      default:
        $anon_value = $random;
    }
    foreach ($items as $item) {
      if (isset($item->value)) {
        $item->value = $anon_value;
      }
    }
  }
  return $archivable;
}
