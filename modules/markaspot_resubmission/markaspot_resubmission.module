<?php

/**
 * @file
 * Contains markaspot_resubmission.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function markaspot_resubmission_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the markaspot_resubmission module.
    case 'help.page.markaspot_resubmission':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Mark-a-Spot Resubmission') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_cron().
 */
function markaspot_resubmission_cron() {
  // We access our configuration.
  $config = \Drupal::config('markaspot_resubmission.settings');

  // Default to an hourly interval. Of course, cron has to be running at least
  // hourly for this to work.
  $interval = $config->get('interval');
  $interval = !empty($interval) ? $interval : 3600;

  // We usually don't want to act every time cron runs (which could be every
  // minute) so keep a time for the next run in the site state.
  $next_execution = \Drupal::state()
    ->get('markaspot_resubmission.next_execution', 0);
  if (\Drupal::time()->getRequestTime() >= $next_execution) {

    // Get all nodes eligible for resubmission from the service.
    $resubmissionSendable = \Drupal::service('markaspot_resubmission.resubmission')->load();
    $count = 0;

    // Get the queue for the resubmission worker.
    $queue = \Drupal::queue('markaspot_resubmission_queue_worker');

    foreach ($resubmissionSendable as $node) {
      // Queue the node for processing.
      $queue->createItem(['nid' => $node->id()]);
      $count++;
    }

    \Drupal::logger('markaspot_resubmission')->notice('Enqueued @count nodes for resubmission notifications.', ['@count' => $count]);

    // Set the next execution time.
    \Drupal::state()
      ->set('markaspot_resubmission.next_execution', \Drupal::time()->getRequestTime() + $interval);
  }
}

/**
 * Implements hook_mail().
 */
function markaspot_resubmission_mail($key, &$message, $params) {
  switch ($key) {
    case 'resubmit_request':
      // Validate required parameters.
      if (empty($params['node'])) {
        \Drupal::logger('markaspot_resubmission')->error('Missing node parameter in hook_mail() for key @key', ['@key' => $key]);
        return;
      }

      // Load mail config in the message's language.
      $mail_config = \Drupal::languageManager()
        ->getLanguageConfigOverride($message['langcode'], 'markaspot_resubmission.mail')
        ->get($key);

      // Fallback to default language if translation doesn't exist.
      if (empty($mail_config)) {
        $mail_config = \Drupal::config('markaspot_resubmission.mail')->get($key);
      }

      // Replace tokens in subject and body.
      $token_service = \Drupal::token();
      $token_data = ['node' => $params['node']];

      $message['from'] = \Drupal::config('system.site')->get('mail');
      $message['subject'] = $token_service->replace($mail_config['subject'], $token_data, ['langcode' => $message['langcode']]);
      $message['body'][] = $token_service->replace($mail_config['body'], $token_data, ['langcode' => $message['langcode']]);
      break;
  }
}
