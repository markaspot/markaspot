<?php

/**
 * @file
 * Module file for markaspot_passwordless.
 */

use Drupal\Core\Render\Markup;

/**
 * Implements hook_mail().
 */
function markaspot_passwordless_mail($key, &$message, $params) {
  switch ($key) {
    case 'verification_code':
      $message['subject'] = t('Your verification code');
      $message['body'][] = Markup::create(
        t('<p>Your verification code is: <strong>@code</strong></p>
<p>This code will expire in @expires_in minutes.</p>
<p>If you did not request this code, please ignore this email.</p>',
          [
            '@code' => $params['code'],
            '@expires_in' => $params['expires_in'],
          ]
        )
      );
      break;
  }
}
