{#
/**
 * @file
 * Template for the main page.
 */
#}

<!-- Sidebar -->
<div class="overlay"></div>

<nav class="navbar navbar-default slideout-menu" id="sidebar-wrapper" role="navigation">
    <div class="navbar-inner">
      {% if page.navbar_left %}
        <div class="navbar-left">
          {{ page.navbar_left }}
        </div>
      {% endif %}
      {% if page.navbar_right %}
        <div class="navbar-right">
            {{ page.navbar_right }}
        </div>
      {% endif %}
    </div>
</nav>
<!-- /#sidebar-wrapper -->
<header class="fixed-header">
    <button type="button" class="hamburger is-closed animated toggle-button" data-toggle="offcanvas">
        <span class="hamb-top"></span>
        <span class="hamb-middle"></span>
        <span class="hamb-bottom"></span>
    </button>
</header>
<div id="page-content-wrapper">
  <div id="hero"></div>

  <div class="container">
    <div class="row">
      {% if page.head %}
        <div class="region-head col-md-12">
          {{ page.head }}
        </div>
      {% endif %}
      {% if page.map %}
        <div class="region-map col-md-12">
          {{ page.map }}
        </div>
      {% endif %}

      {% if page.sidebar %}
        <div class="region-content col-md-8">
      {% endif %}
      {% if page.sidebar is empty %}
        <div class="region-content col-md-12">
      {% endif %}
          {{ page.content }}
        </div>
      {% if page.sidebar %}
      <div class="region-sidebar col-md-4">
        {{ page.sidebar }}
      </div>
      {% endif %}
    </div>
  </div>
  {% if page.footer %}
    <footer id="footer" class="footer" role="footer">
      <div class="container">
        {{ page.footer }}
      </div>
    </footer>
  {% endif %}
</div>

